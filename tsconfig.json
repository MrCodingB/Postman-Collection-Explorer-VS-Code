{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6"
		],
		"sourceMap": true,
		"rootDir": "src",
    "strict": true,
    "alwaysStrict": true,
    "allowJs": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "charset": "utf-8",
    "newLine": "lf",
    "pretty": true,
    "removeComments": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
