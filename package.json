{
	"name": "postman-collection-explorer",
	"displayName": "Postman Collection Explorer",
	"description": "An extension for VS Code to explore, manage and test Postman Collections.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:postman-collection-explorer.helloWorld",
		"onView:postmanCollectionExplorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "postman-collection-explorer.helloWorld",
        "title": "Hello World",
        "category": "Postman"
      },
      {
				"command": "postman-collection-explorer.createCollection",
        "title": "Create Collection",
        "category": "Postman"
      },
      {
				"command": "postman-collection-explorer.deleteCollection",
        "title": "Delete Collection",
        "category": "Postman"
			},
      {
				"command": "postman-collection-explorer.refreshView",
        "title": "Refresh View",
        "category": "Postman",
        "icon": "$(refresh)"
			}
		],
		"views": {
			"postman-collection-explorer": [
				{
					"id": "postmanCollectionExplorer",
					"name": "Postman Collection Explorer"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "postman-collection-explorer",
					"title": "Postman Collection Explorer",
					"icon": "assets/postman-head.svg"
				}
			]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "postman-collection-explorer.deleteCollection",
          "when": "viewItem == collection"
        }
      ],
      "view/title": [
        {
          "command": "postman-collection-explorer.refreshView",
          "when": "view == postmanCollectionExplorer",
          "group": "navigation"
        }
      ]
    }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"eslint": "^7.6.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"glob": "^7.1.6",
		"mocha": "^8.0.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.4.0"
	},
	"dependencies": {
		"@types/postman-collection": "^3.5.5",
		"postman-collection": "^3.6.9",
		"postman-runtime": "^7.26.10"
	}
}
